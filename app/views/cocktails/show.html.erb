<h2> <%= @cocktail.name %> </h2>

<div class="container">
  <ul class="list-group">
    <% @cocktail.ingredients.each do |ingredient| %>
      <li class="list-group-item"><%= ingredient.name %></li>
    <% end %>
  </ul>

  <ul class="list-group">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item"><%= dose.description %></li>
    <% end %>
  </ul>
</div>
<p> <%= link_to "➕ Add Ingredients & Doses", new_cocktail_dose_path(@cocktail) %> </p>
